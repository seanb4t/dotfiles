layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
                // Dracula theme colors
                format_left   "{mode}#[fg=#bd93f9,bold] {session}"
                format_center "{tabs}"
                format_right  "{command_git_branch}{datetime}"
                format_space  ""

                border_enabled  "false"
                border_char     "â”€"
                border_format   "#[fg=#6272a4]{char}"
                border_position "top"

                hide_frame_for_single_pane "true"

                // Mode indicators (Dracula colors)
                mode_normal        "#[bg=#bd93f9,fg=#282a36,bold] NORMAL "
                mode_locked        "#[bg=#6272a4,fg=#f8f8f2] LOCKED "
                mode_resize        "#[bg=#ff79c6,fg=#282a36,bold] RESIZE "
                mode_pane          "#[bg=#50fa7b,fg=#282a36,bold] PANE "
                mode_tab           "#[bg=#8be9fd,fg=#282a36,bold] TAB "
                mode_scroll        "#[bg=#ffb86c,fg=#282a36,bold] SCROLL "
                mode_enter_search  "#[bg=#f1fa8c,fg=#282a36,bold] SEARCH "
                mode_search        "#[bg=#f1fa8c,fg=#282a36,bold] SEARCH "
                mode_rename_tab    "#[bg=#ff79c6,fg=#282a36,bold] RENAME "
                mode_rename_pane   "#[bg=#ff79c6,fg=#282a36,bold] RENAME "
                mode_session       "#[bg=#bd93f9,fg=#282a36,bold] SESSION "
                mode_move          "#[bg=#ffb86c,fg=#282a36,bold] MOVE "
                mode_prompt        "#[bg=#50fa7b,fg=#282a36,bold] PROMPT "
                mode_tmux          "#[bg=#ffb86c,fg=#282a36,bold] TMUX "

                // Tab formatting
                tab_normal              "#[fg=#6272a4] {name} "
                tab_normal_fullscreen   "#[fg=#6272a4] {name} [] "
                tab_normal_sync         "#[fg=#6272a4] {name} <> "
                tab_active              "#[fg=#bd93f9,bold] {name} "
                tab_active_fullscreen   "#[fg=#bd93f9,bold] {name} [] "
                tab_active_sync         "#[fg=#bd93f9,bold] {name} <> "

                // Git branch
                command_git_branch_command     "git rev-parse --abbrev-ref HEAD 2>/dev/null"
                command_git_branch_format      "#[fg=#ff79c6]  {stdout} "
                command_git_branch_interval    "10"
                command_git_branch_rendermode  "static"

                // DateTime
                datetime          "#[fg=#6272a4] {format} "
                datetime_format   "%H:%M %b %d"
                datetime_timezone "America/New_York"
            }
        }
        children
    }
}
